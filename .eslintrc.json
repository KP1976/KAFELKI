{
	"extends": ["prettier", "eslint:recommended"],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"class-methods-use-this": "off",
		"no-plusplus": "off",
		"no-underscore-dangle": "off"
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	}
}
